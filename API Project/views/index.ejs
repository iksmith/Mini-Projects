<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify API Project</title>
    <!-- <link rel="stylesheet" href="/API Project/public/css/styles.css"> -->
</head>
<body>
    <header>
        <h3>
            Hello World - Check out some of my top 5 songs by Drake:
        </h3>
    </header>

    <div class="apiLocation">
        <div class="apiContainer">
            <h4>Track Information</h4>
            <% if (track) { %>
                <% track.forEach(function(track) { %>
                  <h2><%= track.name %></h2>
                  <p>By <%= track.artists[0].name %></p>
                  <p>From the album <%= track.album.name %></p>
                  <img src="<%= track.album.images[0].url %>" alt="Album cover for <%= track.album.name %>">
                <% }) %>
              <% } else { %>
                <p>No track information available.</p>
              <% } %>
        </div>
    </div>
    
</body>
</html>