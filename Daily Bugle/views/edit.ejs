<%- include("partials/header.ejs") %>



<body id="blogBody" style="background-color: white;">
    <div class="upperEdit">
        <div class="backBtn">
            <button class="bBtn" onclick="window.location.href = '/';">Back</button>
        </div>
        <div class="deleteBtn">
            <% if (article && article.id) { %>

                <!-- Delete Btn -->
                <form action="/delete/<%= article.id %>" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="dBtn"> Delete Article </button>
                </form>

            <% } %>
           
            <!-- Need Delete Functionality --> 
            
        </div>
        
    </div>
    

    <div class="blogBody">
        <form action="<%= article.id ? '/update/' + article.id : '/publish' %>" method="POST">
            <div class="bTitle">
                <input class="blogTitle" name="aTitle" type="text" placeholder="Enter Article Title..." value="<%= article ? article.title : '' %>"  required>
            </div>
            <div class="bTxt">
                <textarea class="blogTxt" name="aTxt" type="text" placeholder="Enter Article Here..." required><%= article ? article.content : '' %></textarea>
            </div>
            <div class="bSubmit">
                <input class="submitBtn" name="publish" type="submit" value="<%= article && article.id ? 'Update' : 'Publish' %>">
            </div>
        </form>
    </div>

</body>

